<Page x:Class="SurveyProject.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SurveyProject"
      mc:Ignorable="d" d:DesignWidth="950"
      Title="Main" Height="570">
    <Grid>
        <Button Content="Button" HorizontalAlignment="Left" Margin="788,104,0,0" VerticalAlignment="Top" Width="76" Click="Button_Click"/>
        <ListView x:Name="list1" HorizontalAlignment="Left" Height="212" Margin="10,52,0,0" VerticalAlignment="Top" Width="516">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="아이디" Width="100" DisplayMemberBinding="{Binding ID}"/>
                    <GridViewColumn Header="비밀번호" Width="100" DisplayMemberBinding="{Binding PASS}"/>
                    <GridViewColumn Header="이름" Width="100" DisplayMemberBinding="{Binding NAME}"/>
                    <GridViewColumn Header="권한" Width="100" DisplayMemberBinding="{Binding LEVEL}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Page>
